@model List<GroupBoizDAL.Entities.NewsArticle>

@{
    ViewData["Title"] = "News Management Page";
}

<!-- Page Content -->
<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h4>Recent Posts</h4>
                        <h2>Our Recent Blog Entries</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var news in Model)
                        {
                            <div class="col-lg-6">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="assets/images/blog-thumb-01.jpg" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>Category ID: @news.CategoryId</span>
                                        <a href="#"><h4>@news.NewsTitle</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">Created By: @news.CreatedById</a></li>
                                            <li><a href="#">@news.CreatedDate?.ToString("MMMM dd, yyyy")</a></li>
                                        </ul>
                                        <p>@news.NewsContent</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <button class="btn btn-primary edit-btn" data-id="@news.NewsArticleId">Edit</button>
                                                </div>
                                                <div class="col-lg-6">
                                                    <form method="post" asp-action="Delete">
                                                        <input type="hidden" name="id" value="@news.NewsArticleId" />
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popup Form -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Edit News</h2>
        <form id="editForm" method="post" asp-action="Edit">
            <input type="hidden" id="newsArticleId" name="NewsArticleId">
            <label>Title:</label>
            <input type="text" id="newsTitle" name="NewsTitle" class="form-control">
            <label>Content:</label>
            <textarea id="newsContent" name="NewsContent" class="form-control"></textarea>
            <label>Source:</label>
            <input type="text" id="newsSource" name="NewsSource" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>

<script>
    document.querySelectorAll('.edit-btn').forEach(button => {
        button.addEventListener('click', function () {
            const newsId = this.getAttribute('data-id');

            fetch(`/News/GetNewsById?id=${newsId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById("newsArticleId").value = data.newsArticleId;
                    document.getElementById("newsTitle").value = data.newsTitle;
                    document.getElementById("newsContent").value = data.newsContent;
                    document.getElementById("newsSource").value = data.newsSource;

                    document.getElementById("editModal").style.display = "block";
                });
        });
    });

    document.querySelector('.close').addEventListener('click', function () {
        document.getElementById("editModal").style.display = "none";
    });
</script>
