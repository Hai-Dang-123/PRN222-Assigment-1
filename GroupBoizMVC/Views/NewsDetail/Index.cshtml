</section>
    <script>
                document.getElementById('save-button').addEventListener('click', function() {
            const updatedNews = {
                NewsArticleId: '@ViewBag.News.NewsArticleId',
                NewsTitle: document.getElementById('news-title').innerText,
                NewsContent: document.getElementById('news-content').innerText
            };

            fetch('/NewsDetail/UpdateNews', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(updatedNews)
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                document.getElementById('news-title').contentEditable = false;
                document.getElementById('news-content').contentEditable = false;
                document.getElementById('save-button').classList.add('d-none');
                document.getElementById('edit-button').classList.remove('d-none');
            })
            .catch(error => alert('Error updating news!'));
        });

        document.getElementById('delete-button').addEventListener('click', function() {
            if (confirm('Are you sure you want to delete this news article?')) {
                fetch('/NewsDetail/DeleteNews', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ NewsArticleId: '@ViewBag.News.NewsArticleId' })
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    window.location.href = '/News';
                })
                .catch(error => alert('Error deleting news!'));
            }
        });
            document.getElementById('edit-button').addEventListener('click', function () {
        document.getElementById('news-title').contentEditable = true;
        document.getElementById('news-content').contentEditable = true;
        document.getElementById('save-button').classList.remove('d-none');
        document.getElementById('edit-button').classList.add('d-none');
    });


    </script>
