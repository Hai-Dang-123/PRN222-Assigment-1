
@{
    ViewData["Title"] = "Dashboard Page";
}
@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
}
<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h4>Recent Posts</h4>
                        <h2>Our Recent Blog Entries</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

        <div class="main-content1">
            <!-- Stats Section -->
            <section class="stats">
                <div class="stat-item">Người dùng: <span>100</span></div>
                <div class="stat-item">Khóa học: <span>50</span></div>
                <div class="stat-item">Đơn hàng: <span>200</span></div>
            </section>

            <!-- Data Table Placeholder -->
            <section class="data-table">
                <h2>Danh sách người dùng</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Nguyễn Văn A</td>
                            <td>a@example.com</td>
                            <td>Active</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Trần Thị B</td>
                            <td>b@example.com</td>
                            <td>Inactive</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </div>
<h2>Thống kê tin tức</h2>

<form method="get" asp-controller="Dashboard" asp-action="NewsReport">
    <label for="startDate">Từ ngày:</label>
    <input type="date" id="startDate" name="startDate" required />

    <label for="endDate">Đến ngày:</label>
    <input type="date" id="endDate" name="endDate" required />

    <button type="submit">Lọc</button>
</form>
@if (Model != null && Model.Count > 0)
{
    <h3>Kết quả thống kê</h3>
    <table>
        <thead>
            <tr>
                <th>Ngày tạo</th>
                <th>Số lượng tin tức</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.TotalNews</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có dữ liệu trong khoảng thời gian này.</p>
}

