<h2 class="mb-4 text-center">Báo cáo thống kê bài viết</h2>

<!-- Form chọn khoảng thời gian -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Từ ngày:</label>
                    <input type="date" id="startDate" name="startDate" class="form-control"
                           value="@ViewData["StartDate"]" required>
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Đến ngày:</label>
                    <input type="date" id="endDate" name="endDate" class="form-control"
                           value="@ViewData["EndDate"]" required>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-chart-line me-2"></i>Xem báo cáo
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Bảng hiển thị danh sách bài viết -->
@if (Model != null && Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Ngày tạo</th>
                        <th>Nguồn</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model)
                    {
                        <tr>
                            <td>@news.NewsArticleId</td>
                            <td>@news.NewsTitle</td>
                            <td>@(news.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@news.NewsSource</td>
                            <td>@(news.NewsStatus == true ? "Đã duyệt" : "Chưa duyệt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning shadow-sm" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>Không có bài viết nào trong khoảng thời gian này.
    </div>
}

