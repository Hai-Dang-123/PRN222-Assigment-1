@using GroupBoizCommon.DTO
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page Content -->
<!-- Banner Starts Here -->
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @if (ViewBag.News != null)
            {
                var newsList = ViewBag.News as List<NewsArticleDTO>; // Ép kiểu trước khi sử dụng
                if (newsList != null)
                {
                    foreach (var news in newsList.Take(5))
                    {
                        <div class="item">
                            <img src="@news.ImageUrl" alt="@news.NewsTitle">
                            <div class="item-content">
                                <div class="main-content">
                                    <div class="meta-category">
                                        <span>@(news.CategoryName ?? "Uncategorized")</span>
                                    </div>
                                    <a href="@Url.Action("Index", "NewsDetail", new { id = news.NewsArticleId })">
                                        <h4>@news.NewsTitle</h4>
                                    </a>
                                    <ul class="post-info">
                                        <li><a href="#">@(news.CreateBy ?? "Admin")</a></li>
                                        <li><a href="#">@news.CreatedDate?.ToString("MMMM dd, yyyy")</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            }

        </div>
    </div>
</div>
<!-- Banner Ends Here -->

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @if (ViewBag.News != null)
                        {
                            var newsList = ViewBag.News as List<NewsArticleDTO>; // Ép kiểu đúng
                            if (newsList != null && newsList.Count > 0) // Kiểm tra danh sách không rỗng
                            {
                                <!-- Loop through the first 2 news articles -->
                                @foreach (var news in newsList.Take(2))
                                {
                                    <div class="col-lg-12">
                                        <div class="blog-post">
                                            <div class="blog-thumb">
                                                <img src="@news.ImageUrl" alt="Blog image">
                                            </div>
                                            <div class="down-content">
                                                <span>@(news.CategoryName ?? "Uncategorized")</span> <!-- ✅ Sửa lỗi -->
                                                <a href="@Url.Action("Index", "NewsDetail", new { id = news.NewsArticleId })">
                                                    <h4>@news.NewsTitle</h4>
                                                </a>
                                                <ul class="post-info">
                                                    <li><a href="#">@(news.CreateBy ?? "Admin")</a></li> <!-- ✅ Fix lỗi -->
                                                    <li><a href="#">@news.CreatedDate?.ToString("MMMM dd, yyyy")</a></li>
                                                </ul>
                                                <p>@news.NewsContent</p>
                                                <div class="post-options">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <ul class="post-tags">
                                                                <li><i class="fa fa-tags"></i></li>
                                                                @foreach (var tag in news.Tag)
                                                                {
                                                                    <li><a href="#">@tag</a>,</li>
                                                                }
                                                            </ul>
                                                        </div>
                                                        <div class="col-6">
                                                            <ul class="post-share">
                                                                <li><i class="fa fa-share-alt"></i></li>
                                                                <li><a href="#">Facebook</a>,</li>
                                                                <li><a href="#">Twitter</a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }


                        <!-- Button to view all posts -->
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a class="nav-link" asp-controller="News" asp-action="Index">View All Posts</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <!-- Search -->
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" method="GET" action="/Search">
                                    <input type="text" name="q" class="searchText" placeholder="Type to search..." autocomplete="on">
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </form>
                            </div>
                        </div>

                        <!-- Categories -->
                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Categories</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @if (ViewBag.Category != null)
                                        {
                                            var categoryList = ViewBag.Category as List<CategoryDTO>; // Ép kiểu đúng
                                            if (categoryList != null && categoryList.Count > 0)
                                            {
                                                foreach (var category in categoryList)
                                                {
                                                    <li><a href="/News/ByCategory/@category.CategoryId">- @category.CategoryName</a></li>
                                                }
                                            }
                                            else
                                            {
                                                <li>No categories found.</li>
                                            }
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Tags -->
                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>Tag Clouds</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @if (ViewBag.Tag != null)
                                        {
                                            var tagList = ViewBag.Tag as List<TagDTO>; // Ép kiểu đúng
                                            if (tagList != null && tagList.Count > 0)
                                            {
                                                foreach (var tag in tagList)
                                                {
                                                    <li><a href="/News/ByTag/@tag.TagId">@tag.TagName</a></li>
                                                }
                                            }
                                            else
                                            {
                                                <li>No tags found.</li>
                                            }
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> <!-- row -->
                </div> <!-- sidebar -->
            </div> <!-- col-lg-4 -->
        </div> <!-- row -->
    </div> <!-- container -->
</section>
