@{
    ViewData["Title"] = "Home Page";

}


<!-- Page Content -->
<!-- Banner Starts Here -->
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @if (ViewBag.News != null)
            {
                @foreach (var news in (ViewBag.News as List<GroupBoizDAL.Entities.NewsArticle>).Take(5)) // Lấy 5 bài viết gần nhất
                {
                    <div class="item">
                        <img src="@news.ImageUrl" alt="@news.NewsTitle">
                        <div class="item-content">
                            <div class="main-content">
                                <div class="meta-category">
                                    <span>@(news.Category?.CategoryName ?? "Uncategorized")</span>
                                </div>
                                <a href="post-details.html?id=@news.NewsArticleId">
                                    <h4>@news.NewsTitle</h4>
                                </a>
                                <ul class="post-info">
                                    <li><a href="#">@(news.CreatedBy?.AccountName ?? "Admin")</a></li>
                                    <li><a href="#">@news.CreatedDate?.ToString("MMMM dd, yyyy")</a></li>
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Banner Ends Here -->

<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-content">
                    <div class="row">
                        <div class="col-lg-8">
                            <span>Stand Blog HTML5 Template</span>
                            <h4>Creative HTML Template For Bloggers!</h4>
                        </div>
                        <div class="col-lg-4">
                            <div class="main-button">
                                <a rel="nofollow" href="https://templatemo.com/tm-551-stand-blog" target="_parent">Download Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @if (ViewBag.News != null)
            {
                        <!-- Loop through the first 2 news articles -->
                        @foreach (var news in (ViewBag.News as List<GroupBoizDAL.Entities.NewsArticle>).Take(2))
                        {
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <!-- Display the image for the news article -->
                                        <img src="@news.ImageUrl" alt="Blog image">
                                    </div>
                                    <div class="down-content">
                                        <span>@news.Category</span>
                                        <!-- Link to the post detail page -->
                                            <a href="@Url.Action("Details", "News", new { id = news.NewsArticleId })">
                                                <h4>@news.NewsTitle</h4>
                                            </a>

                                        <ul class="post-info">
                                            <li><a href="#">@news.CreatedBy.AccountName</a></li>
                                            <li><a href="#">@news.CreatedDate</a></li>
                                        </ul>
                                        <p>@news.NewsContent</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        @foreach (var tag in news.Tags)
                                                        {
                                                            <li><a href="#">@tag.TagName</a>,</li>
                                                        }
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-share-alt"></i></li>
                                                        <li><a href="#">Facebook</a>,</li>
                                                        <li><a href="#">Twitter</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
